<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-right">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cartModalLabel">
          <i class="bi bi-cart4 me-2"></i> Mi Carrito
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Asegurar que este contenedor tiene la clase para scroll -->
        <div id="mini-cart-items" class="mini-cart-scrollable">
          <!-- Aquí se cargan los items del carrito dinámicamente -->
        </div>
        
        <!-- Estado de carga -->
        <div id="mini-cart-loading" class="cart-loading-state text-center py-4">
          <div class="loading-animation">
            <div class="spinner-border spinner-border-sm text-primary" role="status">
              <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="loading-text mt-2">Cargando tu carrito...</p>
          </div>
        </div>
        
        <!-- Contenido del carrito -->
        <div id="mini-cart-content" class="cart-content-modern"></div>
        
        <!-- Botón para vaciar carrito -->
        <div class="mini-cart-empty-container text-end mt-3" style="display: none;">
          <button id="mini-cart-empty-btn" class="btn-empty-cart">
            <i class="bi bi-trash me-1"></i>
            <span>Vaciar carrito</span>
          </button>
        </div>
      </div>
      <div class="modal-footer">
        <div class="cart-total-section">
          <div class="total-label">Total a pagar:</div>
          <div class="total-amount" id="mini-cart-total">$0.00</div>
        </div>
        <div class="cart-actions">
          <a href="/cart" class="btn btn-view-cart">
            <i class="bi bi-eye me-1"></i>
            Ver Carrito Completo
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // ========================================
  // NAVBAR USER MODERNIZADO - LÓGICA MEJORADA
  // Funcionalidad profesional con UX moderna
  // ========================================
  
  $(function() {
    initializeUserNavbar();
  });
  
  function initializeUserNavbar() {
    const cedula = localStorage.getItem('cedula');
    
    // Configurar información del usuario
    if (cedula) {
      $('#navbar-cedula').text(cedula);
      $('#dropdown-cedula').text(cedula);
      
      // Agregar efecto de typing para mostrar la cédula
      animateUserInfo(cedula);
    }
    
    // Ocultar icono del carrito si estamos en la página del carrito
    if (window.location.pathname.includes('/cart')) {
      $('#cart-icon-container').hide();
    }
    
    // Configurar eventos del carrito
    setupCartEvents();
    
    // Cargar contador inicial
    updateCartCounter();
    
    // Configurar efectos visuales
    setupVisualEffects();
    
    // Marcar enlace activo
    highlightActiveNavLink();
  }
  
  function animateUserInfo(cedula) {
    // Efecto de typing para mostrar la cédula
    const displayElements = [$('#navbar-cedula'), $('#dropdown-cedula')];
    
    displayElements.forEach(element => {
      element.text('');
      let i = 0;
      const typing = setInterval(() => {
        element.text(cedula.substring(0, i + 1));
        i++;
        if (i >= cedula.length) {
          clearInterval(typing);
          // Agregar efecto de confirmación
          element.addClass('user-info-confirmed');
        }
      }, 100);
    });
  }
    function setupCartEvents() {
    // Evento del icono del carrito
    $('#cart-icon').on('click', function(e) {
      e.preventDefault();
      loadMiniCart();
      
      // Efecto visual de click
      $(this).addClass('cart-clicked');
      setTimeout(() => {
        $(this).removeClass('cart-clicked');
      }, 200);
    });
    
    // Efectos visuales para el enlace "Ver Carrito"
    $('a[href="/cart"].dropdown-item-modern').on('click', function(e) {
      // Efecto de click
      $(this).addClass('link-clicked');
      
      // Efecto de pulso en el ícono
      $(this).find('.bi-eye').addClass('icon-pulse');
      
      setTimeout(() => {
        $(this).removeClass('link-clicked');
        $(this).find('.bi-eye').removeClass('icon-pulse');
      }, 300);
    });
    
    // Eventos del modal
    $('#cartModal').on('shown.bs.modal', function() {
      // Animación de entrada
      $('.modal-content').addClass('cart-modal-enter');
    });
    
    $('#cartModal').on('hidden.bs.modal', function() {
      $('.modal-content').removeClass('cart-modal-enter');
    });
  }
  
  function setupVisualEffects() {
    // Efecto hover para enlaces de navegación
    $('.nav-link-enhanced').hover(
      function() {
        $(this).addClass('nav-link-hover');
      },
      function() {
        $(this).removeClass('nav-link-hover');
      }
    );
    
    // Efecto para el dropdown de usuario
    $('#userDropdown').on('show.bs.dropdown', function() {
      $('.user-dropdown-modern').addClass('dropdown-opening');
    });
    
    $('#userDropdown').on('hide.bs.dropdown', function() {
      $('.user-dropdown-modern').removeClass('dropdown-opening');
    });
    
    // Animación del contador del carrito
    watchCartUpdates();
  }
  
  function highlightActiveNavLink() {
    const currentPath = window.location.pathname;
    $('.nav-link-enhanced').each(function() {
      const linkPath = $(this).attr('href');
      if (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath))) {
        $(this).addClass('nav-link-active');
      }
    });
  }
  
  function watchCartUpdates() {
    // Observar cambios en el contador del carrito
    const cartCounter = document.getElementById('cart-counter');
    if (cartCounter) {
      const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          if (mutation.type === 'childList' || mutation.type === 'characterData') {
            // Animar el badge cuando cambie
            $('#cart-counter').addClass('cart-badge-pulse');
            setTimeout(() => {
              $('#cart-counter').removeClass('cart-badge-pulse');
            }, 600);
          }
        });
      });
      
      observer.observe(cartCounter, {
        childList: true,
        subtree: true,
        characterData: true
      });
    }
  }
  
  function cerrarSesion() {
    // Mostrar indicador de cierre de sesión
    showLogoutIndicator();
    
    // Limpiar datos
    localStorage.removeItem('token');
    localStorage.removeItem('role');
    localStorage.removeItem('username');
    localStorage.removeItem('cedula');
    localStorage.removeItem('cart');
    
    // Redireccionar con efecto suave
    setTimeout(() => {
      window.location.href = '/';
    }, 800);
  }
  
  function showLogoutIndicator() {
    // Crear indicador visual de cierre de sesión
    const indicator = $(`
      <div class="logout-indicator">
        <div class="logout-content">
          <div class="spinner-border text-light" role="status">
            <span class="visually-hidden">Cerrando sesión...</span>
          </div>
          <p class="logout-text mt-2">Cerrando sesión...</p>
        </div>
      </div>
    `);
    
    $('body').append(indicator);
    
    // Animar entrada
    setTimeout(() => {
      indicator.addClass('logout-show');
    }, 10);
  }
</script>
