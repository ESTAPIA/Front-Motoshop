<%- include('../layouts/main') %>

<!-- CSS específico para facturas (puedes crearlo si es necesario) -->
<!-- <link rel="stylesheet" href="/css/facturas.css"> -->

<!-- Contenedor dinámico de la Navbar -->
<div id="navbar-container"></div>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%- title %></h1>
        <!-- Puedes añadir un botón aquí si es relevante, ej: volver al catálogo -->
    </div>

    <!-- Indicador de carga -->
    <div id="loading-facturas" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3">Cargando información de facturas...</p>
    </div>

    <!-- Contenedor para la lista de pedidos/facturas -->
    <div id="facturas-container">
        <!-- Los pedidos y el estado de sus facturas se cargarán aquí por JavaScript -->
    </div>

    <!-- Mensaje cuando no hay pedidos para facturar -->
    <div id="no-facturas-message" class="alert alert-info text-center" style="display: none;">
        <!-- Mensaje se establecerá por JavaScript -->
    </div>

    <!-- Paginación (si la implementas en facturas.js) -->
    <!-- 
    <nav aria-label="Paginación de facturas">
        <ul class="pagination justify-content-center mt-4" id="pagination-facturas">
        </ul>
    </nav> 
    -->
</div>

<!-- Incluir el script de JavaScript para facturas -->
<!-- Asegúrate que jQuery esté cargado antes que este script (usualmente en main.ejs) -->
<script src="/js/facturas.js"></script>
